<?xml version="1.0" ?>
<!-- Root node for Magento layout configuration -->
<layout version="0.1.0">
  <!--Page handle -->
  <productgallery_index_index>
    <!-- reference tag specifies the block where we a going to add child block -->
    <reference name="content">
      <!-- Our page content block -->
	  <action method="setTemplate"><template>page/2columns-right.phtml</template></action>
      <block type="core/template" name="productgallery" template="productgallery/view.phtml"></block>
    </reference>
  </productgallery_index_index>
</layout>
